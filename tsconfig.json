{
    "compilerOptions": {
        "target": "es2020",
        "lib": [
            "ESNext"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strict": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true
    },
    "include": [
        "packages/**/*.ts",
        "tests/**/*.ts",
        "vitest.config.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
