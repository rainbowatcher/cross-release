{
  "name": "cross-release-project",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@8.7.1",
  "description": "the cross release project",
  "author": {
    "name": "rainbowatcher",
    "email": "rainbow-w@qq.com",
    "url": "https://github.com/rainbowatcher"
  },
  "license": "MIT",
  "homepage": "https://github.com/rainbowatcher/cross-release#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rainbowatcher/cross-release.git"
  },
  "bugs": {
    "url": "https://github.com/rainbowatcher/cross-release/issues"
  },
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "bin": {
    "sum": "./bin/cmd.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "lint": "eslint .",
    "prepare": "husky install",
    "test": "vitest",
    "coverage": "vitest --coverage",
    "release": "jiti packages/cross-release-cli/src/index.ts -r",
    "publish": "pnpm -r publish",
    "typecheck": "tsc --noEmit",
    "up": "taze -rI"
  },
  "devDependencies": {
    "@rainbowatcher/eslint-config": "0.3.2",
    "@types/debug": "^4.1.8",
    "@types/node": "^20.5.9",
    "@types/semver": "^7.5.1",
    "@vitest/coverage-v8": "^0.34.3",
    "commitlint": "^17.7.1",
    "eslint": "^8.48.0",
    "husky": "^8.0.3",
    "jiti": "^1.19.3",
    "lint-staged": "^14.0.1",
    "pkgroll": "^1.11.0",
    "taze": "^0.11.2",
    "typescript": "^5.2.2",
    "vitest": "^0.34.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue,json}": "eslint --fix"
  },
  "cross-release": {
    "excludes": [
      "fixture"
    ]
  }
}
