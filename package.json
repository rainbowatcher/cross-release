{
    "name": "cross-release-project",
    "type": "module",
    "version": "0.0.1-alpha.5",
    "private": true,
    "packageManager": "pnpm@9.5.0",
    "description": "the cross release project",
    "author": {
        "name": "rainbowatcher",
        "email": "rainbow-w@qq.com",
        "url": "https://github.com/rainbowatcher"
    },
    "license": "MIT",
    "homepage": "https://github.com/rainbowatcher/cross-release#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rainbowatcher/cross-release.git"
    },
    "bugs": {
        "url": "https://github.com/rainbowatcher/cross-release/issues"
    },
    "sideEffects": false,
    "scripts": {
        "build": "pnpm run clean && pnpm run -r build",
        "clean": "pnpm run -r clean",
        "coverage": "vitest --coverage",
        "dev": "jiti packages/cross-release-cli/src/index.ts -rd",
        "lint": "eslint .",
        "prepare": "husky install",
        "release": "node packages/cross-release-cli/dist/index.mjs",
        "publish": "pnpm run release -ry && pnpm run build && pnpm -r publish",
        "test": "vitest",
        "typecheck": "tsc --noEmit",
        "up": "taze -rI"
    },
    "devDependencies": {
        "@rainbowatcher/eslint-config": "^0.11.2",
        "@rainbowatcher/eslint-config-ignore": "^0.11.2",
        "@rainbowatcher/eslint-config-js": "^0.11.2",
        "@rainbowatcher/eslint-config-json": "^0.11.2",
        "@rainbowatcher/eslint-config-md": "^0.11.2",
        "@rainbowatcher/eslint-config-prettier": "^0.11.2",
        "@rainbowatcher/eslint-config-toml": "^0.11.2",
        "@rainbowatcher/eslint-config-ts": "^0.11.2",
        "@types/debug": "^4.1.12",
        "@types/node": "^20.14.11",
        "@types/semver": "^7.5.8",
        "@vitest/coverage-v8": "^2.0.3",
        "commitlint": "^19.3.0",
        "eslint": "^9.7.0",
        "husky": "^9.0.11",
        "jiti": "^1.21.6",
        "lint-staged": "^15.2.7",
        "pkgroll": "^2.1.1",
        "rimraf": "^6.0.1",
        "taze": "^0.15.2",
        "typescript": "^5.5.3",
        "vitest": "^2.0.3"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,vue,json}": "eslint --fix"
    },
    "cross-release": {
        "excludes": [
            "fixture"
        ]
    }
}
