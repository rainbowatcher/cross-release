{
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit",
        "source.organizeImports": "never",
    },
    "git.alwaysSignOff": true,
    "cSpell.words": [
        "defu",
        "iarna",
        "memfs",
        "outro",
        "tsdown",
        "unconfig",
    ],
    "git.ignoredRepositories": [
        "fixture",
    ],
    "eslint.validate": [
        "javascript",
        "typescript",
        "json",
        "markdown",
        "toml",
        "yaml",
    ],
}
