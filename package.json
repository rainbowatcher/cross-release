{
    "name": "cross-release-project",
    "type": "module",
    "version": "0.1.0-alpha.1",
    "private": true,
    "packageManager": "pnpm@9.9.0",
    "description": "the cross release project",
    "author": {
        "name": "rainbowatcher",
        "email": "rainbow-w@qq.com",
        "url": "https://github.com/rainbowatcher"
    },
    "license": "MIT",
    "homepage": "https://github.com/rainbowatcher/cross-release#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rainbowatcher/cross-release.git"
    },
    "bugs": {
        "url": "https://github.com/rainbowatcher/cross-release/issues"
    },
    "sideEffects": false,
    "scripts": {
        "build": "pnpm -r build",
        "clean": "pnpm -r clean",
        "coverage": "vitest --coverage",
        "dev": "tsx packages/cross-release-cli/src/cli.ts -rD",
        "lint": "eslint .",
        "prepare": "simple-git-hooks",
        "release": "node packages/cross-release-cli/dist/cli.js",
        "publish": "pnpm release -ry && pnpm build && pnpm -r publish",
        "test": "vitest",
        "typecheck": "tsc --noEmit",
        "up": "taze -rI"
    },
    "devDependencies": {
        "@commitlint/config-conventional": "^19.4.1",
        "@rainbowatcher/eslint-config": "^0.14.2",
        "@rainbowatcher/eslint-config-ignore": "^0.14.2",
        "@rainbowatcher/eslint-config-js": "^0.14.2",
        "@rainbowatcher/eslint-config-json": "^0.14.2",
        "@rainbowatcher/eslint-config-md": "^0.14.2",
        "@rainbowatcher/eslint-config-prettier": "^0.14.2",
        "@rainbowatcher/eslint-config-toml": "^0.14.2",
        "@rainbowatcher/eslint-config-ts": "^0.14.2",
        "@types/debug": "^4.1.12",
        "@types/node": "^22.5.1",
        "@types/semver": "^7.5.8",
        "@vitest/coverage-v8": "^2.0.5",
        "commitlint": "^19.4.0",
        "dedent": "^1.5.3",
        "eslint": "^9.9.1",
        "execa": "^9.3.1",
        "rimraf": "^6.0.1",
        "simple-git-hooks": "^2.11.1",
        "taze": "^0.16.7",
        "tsup": "^8.2.4",
        "tsx": "^4.19.0",
        "typescript": "^5.5.4",
        "vitest": "^2.0.5"
    },
    "simple-git-hooks": {
        "commit-msg": "pnpm exec commitlint --edit $1"
    },
    "commitlint": {
        "extends": ["@commitlint/config-conventional"],
        "scope-enum": [
            2, "always", ["cross-release-cli", "cross-bump", "deps"]
        ]
    },
    "cross-release": {
        "excludes": [
            "fixture"
        ]
    }
}
